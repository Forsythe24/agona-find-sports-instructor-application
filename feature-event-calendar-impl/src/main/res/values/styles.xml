<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalendarViewCustom" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="CalendarViewWeekDayTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black_75</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarViewDateTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@drawable/calendar_date_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>

    </style>
</resources>
