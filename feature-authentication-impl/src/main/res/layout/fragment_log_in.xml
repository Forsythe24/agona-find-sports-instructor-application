<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/snow">

    <ImageView
        app:layout_constraintTop_toTopOf="@id/back_tv"
        app:layout_constraintBottom_toBottomOf="@id/back_tv"
        app:layout_constraintEnd_toStartOf="@id/back_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_keyboard_arrow_left_24"/>
    <TextView
        android:id="@+id/back_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="28dp"
        />

    <TextView
        android:id="@+id/log_in_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_in"
        android:textSize="36sp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/blueberry"
        android:layout_marginTop="120dp"
        android:layout_marginStart="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:textSize="16sp"
        android:id="@+id/log_in_into_account_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_log_in_into_your_account"
        app:layout_constraintTop_toBottomOf="@id/log_in_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/inter_semibold"/>

    <TextView
        android:id="@+id/email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintTop_toBottomOf="@id/log_in_into_account_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"/>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_text_input"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email_tv"
        style="@style/UserInfoFieldTextInputLayout"
        android:layout_marginHorizontal="28dp"
        app:hintEnabled="false"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_et"
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/inter_regular"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintTop_toBottomOf="@id/email_text_input"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_text_input"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_tv"
        style="@style/UserInfoFieldTextInputLayout"
        app:passwordToggleEnabled="true"
        android:layout_marginHorizontal="28dp"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_et"
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:inputType="textPassword"
            android:fontFamily="@font/inter_regular"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        style="@style/DefaultButton"
        android:id="@+id/log_in_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_text_input"
        android:layout_marginTop="36dp"
        android:text="@string/log_in_btn"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/have_account_question_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/log_in_btn"
        android:text="@string/don_t_have_an_account"
        android:fontFamily="@font/inter_semibold"
        />

    <TextView
        android:id="@+id/signup_lnk"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/have_account_question_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/sign_up"
        android:textColor="@color/blueberry"
        android:fontFamily="@font/inter_bold"/>






</androidx.constraintlayout.widget.ConstraintLayout>

