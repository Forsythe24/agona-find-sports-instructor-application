<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/snow"
    tools:context="com.solopov.feature_instructor_impl.presentation.list.InstructorsFragment">

    <SearchView
        android:id="@+id/instructors_sv"
        android:layout_marginTop="64dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:queryHint="Search"
        android:background="@drawable/search_view_background"
        />

    <TextView
        android:id="@+id/instructors_tv"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_semibold"
        android:textSize="@dimen/screen_heading_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instructors"
        app:layout_constraintTop_toBottomOf="@id/instructors_sv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/sports_kinds_tab_layout"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        app:tabMode="auto"
        app:tabTextColor="@color/subtle_black"
        app:tabIndicatorGravity="stretch"
        app:tabIndicatorAnimationMode="elastic"
        app:tabSelectedTextColor="@color/white"
        app:tabIndicatorColor="@null"
        app:tabIndicator="@drawable/tab_indicator"
        app:layout_constraintTop_toBottomOf="@id/instructors_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:background="@color/snow"
        app:tabTextAppearance="@style/TabLayoutTextAppearance"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/sports_kinds_vp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/sports_kinds_tab_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>







</androidx.constraintlayout.widget.ConstraintLayout>

