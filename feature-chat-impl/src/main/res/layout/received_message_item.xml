<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/message_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="@color/deepSaffron"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:id="@+id/received_message_tv"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/received_message_sample"
            android:fontFamily="@font/inter_regular"
            android:padding="12dp"
            android:textSize="18sp"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:textColor="#75000000"
        android:text="@string/date_sample"
        android:layout_marginStart="6dp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/message_cv"
        app:layout_constraintStart_toStartOf="@id/message_cv" />
</androidx.constraintlayout.widget.ConstraintLayout>
